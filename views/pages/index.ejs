<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coordenadas</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <h1 class="d-flex justify-content-center text-primary-emphasis">
        Mis Coordenadas
    </h1>
    <div class="table-responsive">
      <table class="table table-bordered border border-4 border-dark">
        <tr class="text-center">
          <th scope="col">Fecha</th>
          <th scope="col">Latitud</th>
          <th scope="col">Longitud</th>
          <th scope="col">Ciudad</th>
          <th scope="col">IP</th>
        </tr>
        <% for(let i=0; i < results.length; i++) { %>
        <tr class="text-break">
          <td><%= results[i].fecha.toString() %></td>
          <td><%= results[i].latitud %></td>
          <td><%= results[i].longitud %></td>
          <td><%= results[i].ciudad %></td>
          <td><%= results[i].ip %></td>
        </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>
